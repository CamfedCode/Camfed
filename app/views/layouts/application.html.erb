<!DOCTYPE html>
<html>
	<head>
		<title>Camfed</title>
		<%= stylesheet_link_tag :all %>
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %>
	</head>
	<body>

		<div class="banner">
			<%= image_tag 'logo.gif'%>
			<h1>Camfed Data Importer</h1>
		</div>

		<div class="menu">
			<%= link_to 'Settings', edit_admin_configuration_path %>
		</div>

		<div class="breadcrumbs">
			<%= render_crumbs %>
		</div>

		<div class="messages">
			<% flash.each_pair do |flash_type, message|%>
			<div class="<%=flash_type%>">
				<%= message %>
			</div>
			<%end%>
		</div>

		<div class="content">
			<%= yield %>
		</div>

	</body>
</html>
