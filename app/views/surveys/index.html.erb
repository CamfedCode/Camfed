<h2>Surveys</h2>

<%= link_to 'Refresh Surveys List from EpiSurveyor', sync_with_epi_surveyor_surveys_path, :method => :post %>

<ol class="surveys">
<% @surveys.sort_by{|survey| survey.name}.each do |survey|%>
	<li>
		<div class="survey">
			<div class="survey_name">
				<%= survey.name %>
			</div>
			<div class="last_imported_at">
			 (Last imported at: <%= "#{distance_of_time_in_words(Time.now, survey.last_imported_at)} ago" if survey.last_imported_at%>)
			</div>
			<div class="actions">
				<%= link_to 'Import', import_survey_path(survey.id), :method => :post %>
				<%= link_to 'Mappings', survey_mappings_path(survey.id) %>
				<%= link_to 'Import History', survey_import_histories_path(survey.id) %>
				<%= link_to 'Questions', survey_questions_path(survey.id) %>
			</div>
			<div class="clear"></div>
		</div>
	</li>
<%end%>
</ol>